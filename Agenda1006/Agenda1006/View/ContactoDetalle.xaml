<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda1006.View.ContactoDetalle"
             Title="{Binding Titulo}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modificar" Clicked="clicModificar" />
        <ToolbarItem Text="Eliminar" Clicked="clicEliminar" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nombre:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Contacto.nombreContacto}" FontSize="Small"/>
        <Label Text="Apellidos:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Contacto.apellidos}" FontSize="Small"/>
        <Label Text="Teléfono:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Contacto.numeroTelefono}" FontSize="Small"/>
        <Label Text="Tipo:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Contacto.tipoNumero}" FontSize="Small"/>
        <Label Text="Correo Electrónico:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Contacto.correoElelectronico}" FontSize="Small"/>
        <Label Text="Dirección:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Contacto.direccion}" FontSize="Small"/>
    </StackLayout>
</ContentPage>